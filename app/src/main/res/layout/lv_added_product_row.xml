<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="4dp"
    android:background="@color/peachy">

    <TextView
        android:id="@+id/lv_added_product_row_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/lv_added_product_row_tv_price"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/lv_added_product_row_tv_total_per_product"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:textSize="12dp"
        android:textAlignment="textStart"
        android:fontFamily="@font/inter_bold"
        android:textColor="@color/black"

        />

    <TextView
        android:id="@+id/lv_added_product_row_tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/lv_added_product_row_tv_quantity"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:textSize="12dp"
        android:textAlignment="textStart"
        android:fontFamily="@font/inter_regular"
        android:textColor="@color/black"

        />

    <TextView
        android:id="@+id/lv_added_product_row_tv_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lv_added_product_row_tv_price"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:textSize="12dp"
        android:textAlignment="textStart"
        android:fontFamily="@font/inter_regular"
        android:textColor="@color/black"

        />

    <TextView
        android:id="@+id/lv_added_product_row_tv_total_per_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:textSize="12dp"
        android:textAlignment="textStart"
        android:fontFamily="@font/inter_regular"
        android:textColor="@color/black"

        />


</androidx.constraintlayout.widget.ConstraintLayout>