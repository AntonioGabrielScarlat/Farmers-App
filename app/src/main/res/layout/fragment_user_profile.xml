<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

 <androidx.constraintlayout.widget.ConstraintLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content">




  <TextView
      android:id="@+id/fragment_user_profile_tv_account_options_title"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:layout_marginStart="8dp"
      android:layout_marginLeft="8dp"
      android:layout_marginTop="16dp"
      android:layout_marginEnd="8dp"
      android:layout_marginRight="8dp"
      android:text="Account options"
      android:textSize="24dp"
      android:textAlignment="center"
      android:fontFamily="@font/inter_bold"
      android:textColor="@color/black"

      />

  <Button
      android:id="@+id/fragment_user_profile_btn_logout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@id/fragment_user_profile_tv_account_options_title"
      android:layout_marginTop="8dp"
      android:layout_marginStart="8dp"
      android:layout_marginEnd="8dp"
      android:text="Logout"
      android:textSize="12dp"
      android:textAlignment="center"
      android:fontFamily="@font/inter_bold"
      android:textColor="@color/black"
      android:background="@drawable/rounded_button_orange"
      />

  <Button
      android:id="@+id/fragment_user_profile_btn_change_password"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@id/fragment_user_profile_btn_logout"
      android:layout_marginTop="8dp"
      android:layout_marginStart="8dp"
      android:layout_marginEnd="8dp"
      android:text="Change Password"
      android:textSize="12dp"
      android:textAlignment="center"
      android:fontFamily="@font/inter_bold"
      android:textColor="@color/black"
      android:background="@drawable/rounded_button_orange"

      />

  <Button
      android:id="@+id/fragment_user_profile_btn_delete_account"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@id/fragment_user_profile_btn_change_password"
      android:layout_marginTop="8dp"
      android:layout_marginStart="8dp"
      android:layout_marginEnd="8dp"
      android:text="Delete Account"
      android:textSize="12dp"
      android:textAlignment="center"
      android:fontFamily="@font/inter_bold"
      android:textColor="@color/black"
      android:background="@drawable/rounded_button_orange"
      />

  <TextView
      android:id="@+id/fragment_user_profile_tv_rate_app_title"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintBottom_toTopOf="@id/fragment_user_profile_rb_rate_app"
      app:layout_constraintTop_toBottomOf="@id/fragment_user_profile_btn_delete_account"
      android:layout_marginTop="16dp"
      android:text="Rate us!"
      android:textSize="24dp"
      android:textAlignment="center"
      android:fontFamily="@font/inter_bold"
      android:textColor="@color/black"
      app:layout_constraintStart_toStartOf="parent"

      />

  <RatingBar
      android:id="@+id/fragment_user_profile_rb_rate_app"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@id/fragment_user_profile_tv_rate_app_title"
      android:layout_marginTop="8dp"
      android:max="5"
      android:outlineSpotShadowColor="@color/green"
      android:outlineAmbientShadowColor="@color/green"
      />

  <Button
   android:id="@+id/fragment_user_profile_btn_submit_rating"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@id/fragment_user_profile_rb_rate_app"
      android:layout_marginTop="8dp"
      android:layout_marginStart="8dp"
      android:layout_marginEnd="8dp"
      android:layout_marginBottom="16dp"
      android:text="Submit Rating"
      android:textSize="12dp"
      android:textAlignment="center"
      android:fontFamily="@font/inter_bold"
      android:textColor="@color/black"
      android:background="@drawable/rounded_button_orange"
      />


 </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>