<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/peachy"
    >

    <ImageView
        android:id="@+id/lv_user_row_iv_edit_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/ic_baseline_edit_24"
        android:contentDescription="Edit"/>

    <ImageView
        android:id="@+id/lv_user_row_iv_people_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/tv_lv_user_row_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_baseline_person_outline_24"
        android:contentDescription="Name"/>

    <ImageView
        android:id="@+id/lv_user_row_iv_people_different_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/tv_lv_user_row_username"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lv_user_row_iv_people_icon"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_baseline_person_pin_circle_24"
        android:contentDescription="Username"
         />

    <ImageView
        android:id="@+id/lv_user_row_iv_security_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:contentDescription="Password"
        android:src="@drawable/ic_baseline_security_24"
        app:layout_constraintEnd_toStartOf="@id/tv_lv_user_row_password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lv_user_row_iv_people_different_icon" />

    <TextView
        android:id="@+id/tv_lv_user_row_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/lv_user_row_iv_people_icon"
        app:layout_constraintEnd_toStartOf="@id/lv_user_row_iv_edit_icon"
        app:layout_constraintStart_toEndOf="@id/lv_user_row_iv_people_icon"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:textSize="12dp"
        android:textAlignment="textStart"
        android:fontFamily="@font/inter_regular"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/tv_lv_user_row_username"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/lv_user_row_iv_people_different_icon"
        app:layout_constraintEnd_toStartOf="@id/lv_user_row_iv_edit_icon"
        app:layout_constraintStart_toEndOf="@id/lv_user_row_iv_people_different_icon"
        app:layout_constraintTop_toBottomOf="@id/lv_user_row_iv_people_icon"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:textSize="12dp"
        android:textAlignment="textStart"
        android:fontFamily="@font/inter_regular"
        android:textColor="@color/black"
         />

    <TextView
        android:id="@+id/tv_lv_user_row_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/lv_user_row_iv_security_icon"
        app:layout_constraintEnd_toStartOf="@id/lv_user_row_iv_edit_icon"
        app:layout_constraintStart_toEndOf="@id/lv_user_row_iv_security_icon"
        app:layout_constraintTop_toBottomOf="@id/lv_user_row_iv_people_different_icon"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:textSize="12dp"
        android:textAlignment="textStart"
        android:fontFamily="@font/inter_regular"
        android:textColor="@color/black"
        />


</androidx.constraintlayout.widget.ConstraintLayout>